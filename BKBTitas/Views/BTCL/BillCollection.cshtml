@model IEnumerable<BKBTitas.Models.ViewModel.BTCLBillDetailsModel>
<h2><center><font color="Green">Search Bill Collection List by Date</font></center> </h2><br />
@using (Html.BeginForm())
{
    <div class="row">
        @Html.Label("Filter by Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.Editor("date_", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
        </div>
        <div class="form-group col-md-2">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            Serial
        </th>
        <th>
            Bill No
        </th>
        <th>
            Month-Year
        </th>
        <th>
            Bill Amount
        </th>
        <th>
            Overdue Amount
        </th>
        <th>
            Vat
        </th>
        <th>
            Total
        </th>
        <th>
            Name
        </th>
        <th>
            Status
        </th>
        
        <th>Action</th>
    </tr>
    @if (Model != null)
    {
        int i = 0;
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.id)
                    @(i + (Int32)1)
                    @{ i++;}
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillMonthYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BTCLAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OverdueAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VAT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillPayStatus)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.ServiceNumber)
                </td>*@
                <td>
                    @Html.ActionLink("Cancel", "BillCancel", new { id = item.id })
                </td>
            </tr>
        }
    }
    else
    {
        @Html.Display("No Data Found");
    }
</table>
