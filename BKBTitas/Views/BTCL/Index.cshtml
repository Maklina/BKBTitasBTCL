@model BKBTitas.Models.ViewModel.BTCLBillRequestModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @if (TempData["errMsg"] != null)
    {
        <h4 style="color:red;">@TempData["errMsg"]</h4>
    }
    @if (TempData["retMsg"] != null)
    {
        <h5 style="color:red;">@TempData["retMsg"]</h5>
    }
    <h4>Search With Bill No/Phone No</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Search Type", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SearchType, new List<SelectListItem>
                            {
                                new SelectListItem{ Text="Phone Number", Value = "PN" },
                                new SelectListItem{ Text="Bill Number", Value = "BN" },
                                new SelectListItem{ Text="Account Number", Value = "AN" },
                             }, "Select List", new { @class = "form-control input-sm", @required = "required", @id = "SearchType" })
            @Html.ValidationMessageFor(model => model.SearchType, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Bill No/Phone No", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BillNumber, new { htmlAttributes = new { @class = "form-control", @required = "required", @autocomplete = "off" } })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Pay Status", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Paystatus, new List<SelectListItem>
                            {
                                new SelectListItem{ Text="Unpaid", Value = "U" },
                                new SelectListItem{ Text="Paid", Value = "P" },
                             }, new { @class = "form-control input-sm", @required = "required", @id = "PayStatus" })
            @Html.ValidationMessageFor(model => model.Paystatus, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default btn-primary" />
        </div>
    </div>
</div>
}
