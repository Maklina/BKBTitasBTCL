@using (Html.BeginForm())
{
    <div class="row">
        @Html.Label("Filter by Date From", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.Editor("fromDate", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
        </div>
        @Html.Label("To Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.Editor("toDate", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
        </div>
        <div class="form-group col-md-2">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
}
